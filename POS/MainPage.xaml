<Page x:Class="POS_app.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:POS_app"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="500"
      Title="POS - Home">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">PLACE ORDER</TextBlock>
        <Button Grid.Column="1" Grid.Row="0" Click="Place_ord">Order</Button>
        <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">Check Order History</TextBlock>
        <Button Grid.Column="1" Grid.Row="1">Hist</Button>
        <TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">Check Item Inventory</TextBlock>
        <Button Grid.Column="1" Grid.Row="2">Inv</Button>
    </Grid>
</Page>
